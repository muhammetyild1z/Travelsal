@model EntityLayer.Concrete.AppUser
@{
    ViewData["Title"] = "info";
    Layout = "~/Views/Shared/AdminLayout_.cshtml";
}


    <section class="vh-100" style="background-color: #f4f5f7;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-lg-6 mb-4 mb-lg-0">
        <div class="card mb-3" style="border-radius: .5rem;">
          <div class="row g-0">
            <div class="col-md-4 gradient-custom text-center text-white mt-5"
              style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
              <img src="/IFormFileImage/Userimages/@Model.ImagerUrl"
                                 alt="Avatar" class="img-fluid my-5 rounded-circle" style="width: 80px;" />
              <h5> @Model.Name</h5>
              <p class="invert-text-dark">@Model.Gender</p>
              <i class="far fa-edit mb-5"></i>
              <button class="btn btn-danger text-bold mt-3"> Banla</button>
            </div>
            <div class="col-md-8">
              <div class="card-body p-4">
                <h6>Kullanıcı Detayı</h6>
                <hr class="mt-0 mb-4">
                <div class="row pt-1">
                  <div class="col-6 mb-3">
                    <h6>Email</h6>
                    <p class="text-muted">@Model.Email</p>
                  </div>
                  <div class="col-6 mb-3">
                    <h6>Telefon</h6>
                    <p class="text-muted">@Model.PhoneNumber</p>
                  </div>
                </div>
                <h6>Hesap Bilgileri</h6>
                <hr class="mt-0 mb-4">
                <div class="row pt-1">
                  <div class="col-6 mb-3">
                    <h6>Kulanıcı Adı</h6>
                    <p class="text-muted">@Model.UserName</p>
                  </div>
                  <div class="col-6 mb-3">
                    <h6>Kayıt Tarihi</h6>
                    <p class="text-muted">@Model.CrateDate</p>
                  </div>
                                    <div class="col-6 mb-3">
                                        <h6>Yasaklı Tarih</h6>
                                        <p class="text-muted">@Model.LockoutEnd</p>
                                    </div>
                                    <div class="col-6 mb-3">
                                        <h6>Two Factor Açık mı</h6>
                                        <p class="text-muted">@Model.TwoFactorEnabled</p>
                                    </div>
                </div>
                <div class="d-flex justify-content-start">
                  <a href="#!"><i class="fab fa-facebook-f fa-lg me-3"></i></a>
                  <a href="#!"><i class="fab fa-twitter fa-lg me-3"></i></a>
                  <a href="#!"><i class="fab fa-instagram fa-lg"></i></a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>