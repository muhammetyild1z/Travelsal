@using X.PagedList
@using X.PagedList.Mvc.Core
@using X.PagedList.Web.Common
@model IPagedList<EntityLayer.Concrete.Destination>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/User_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header pb-0">
                    <h6>Kaydı devam eden turlar</h6>
                </div>
                <div class="card-body px-0 pt-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Tur</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Kapasitesi</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Fiyat</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Durumu</th>
                                    <th class="text-secondary opacity-7"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex px-2 py-1">
                                                <div>
                                                    <img src="~/IFormFileImage/DestinationCoverImages/@item.destinationImage" class="avatar avatar-sm me-3" alt="user1">
                                                </div>
                                                <div class="d-flex flex-column justify-content-center">
                                                    <h6 class="mb-0 text-sm">@item.destinationCity</h6>
                                                    <p class="text-xs text-secondary mb-0">@item.destinationDayNight</p>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <p class="text-xs font-weight-bold mb-0">@item.destinationCapacity</p>

                                        </td>
                                        <td class="align-middle text-center text-sm">
                                            <span class="badge badge-sm bg-gradient-faded-info">@item.destinationPrice ₺</span>
                                        </td>
                                        <td class="align-middle text-center">
                                            <span class="text-secondary text-xs font-weight-bold">@item.destinationStatus</span>
                                        </td>
                                        <td class="align-middle">
                                            <a href="/Destination/Details/@item.destinationId" class="text-secondary font-weight-bold text-xs" data-toggle="tooltip" data-original-title="Edit user">
                                              Detayları gör
                                            </a>
                                        </td>
                                    </tr>
                                }


                            </tbody>
                        </table>
                        @Html.PagedListPager((IPagedList)Model, page => Url.Action("Destination", "Member", new { page }), new PagedListRenderOptions
                   {
                       LiElementClasses = new string[] { "page-item" },
                       UlElementClasses = new string[] { "pagination justify-content-center" },
                       PageClasses = new string[] { "page-link" },
                       Display = PagedListDisplayMode.IfNeeded
                   })
                    </div>
                </div>
            </div>
        </div>
    </div>
    

</div>
