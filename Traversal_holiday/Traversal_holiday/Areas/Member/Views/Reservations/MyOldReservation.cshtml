@model List<EntityLayer.Concrete.Reservation>
@{
    ViewData["Title"] = "MyOldReservation";
    Layout = "~/Views/Shared/User_Layout.cshtml";
}
<br />
<br />

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header pb-0 ">
                    <h6 class="text-bolder ">Geçmiş Rezervasyonlarım</h6>
                </div><br />
                <div class="card-body px-0 pt-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Tur</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Kişi Sayısı</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Tur Süresi</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Tur Durumu</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Onay Durumu</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Tur Tarihi</th>
                                    <th class="text-secondary opacity-7"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {

                                <tr>
                                    <td>
                                        <div class="d-flex px-2 py-1">

                                            <div class="d-flex flex-column justify-content-center">
                                                <h6 class="mb-0 text-sm">@item.Destination.destinationCity</h6>
                                                @*<p class="text-xs text-secondary mb-0">@item.Destination.</p>*@
                                            </div>
                                        </div>
                                    </td>
                                    <td class="align-middle text-center text-sm">
                                        <span class="badge badge-sm bg-gradient-faded-info">@item.rezCount</span>
                                    </td>
                                    <td class="align-middle text-center text-sm">
                                        <span class="badge badge-sm bg-gradient-success">@item.Destination.destinationDayNight</span>
                                    </td>
                                    <td class="align-middle text-center text-sm">
                                        <span class="">@item.Destination.destinationStatus</span>
                                    </td>
                                    <td class="align-middle text-center text-sm">
                                        <span class="">@item.rezStatus</span>
                                    </td>
                                    <td class="align-middle text-center text-sm">
                                        <span class="">@item.Destination.destinationDate.ToShortDateString()</span>
                                    </td>
                                   


                                </tr>


                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>
<br />
<br />
<br />
<br />


