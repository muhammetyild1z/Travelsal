@model List<EntityLayer.Concrete.Destination>

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<body>
    <!--header-->
    <!-- //header -->
    <!-- about breadcrumb -->
    <section class="w3l-about-breadcrumb text-left">
        <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
            <div class="container">
                <h2 class="title">Tur Detayları</h2>
                <ul class="breadcrumbs-custom-path mt-2">
                    <li><a href="/Home/Index">Anasayfa</a></li>
                    <li class="active"><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span> Rehberin Yorumu  </li>
                </ul>
            </div>
        </div>
    </section>

    <!-- //about breadcrumb -->
    <!--/blog-->


    @foreach (var item in Model)
    {
        
        @await Component.InvokeAsync("_guidReferance",new  { id =item.guideId ,destId=item.destinationcreateDate })
        <section class="blog-post-main w3l-homeblock1">
            <!--/blog-post-->
            <div class="blog-content-inf pb-5">
                <div class="container pb-lg-4">
                    <div class="single-post-image">
                        <div class="post-content pagination justify-content-center">
                            <img src="/IFormFileImage/DestinationCoverImages/@item.CoverImage" class="radius-image img-fluid mb-5" alt="" />
                        </div>
                    </div>
                    <div class="single-post-content">
                        <p class="alphabet mb-4">
                            <span class="big-letter">@item.destinationDetails1.Substring(0, 1)</span>
                            @item.destinationDetails1.Substring(1)
                        </p>

                        <blockquote class="blockquote my-5">
                            <div class="icon-quote"><span class="fa fa-quote-left" aria-hidden="true"></span></div>
                            Lorem ipsum dolor sit amet,Ea consequuntur illum facere aperiam sequi optio consectetur.Ea
                            consequuntur illum facere aperiam sequi optio consectetur adipisicing elitFuga, suscipit
                            totam animi, dolores magnam assumenda soluta odit harum.
                            <footer class="blockquote-footer mt-3">
                                Smith lara
                            </footer>
                        </blockquote>


                        <div class="sing-post-thumb mb-5 row pt-3">
                            <div class="col-sm-6">
                                <a href="#url"><img src="/IFormFileImage/DestinationCoverImages/@item.destinationImage" class="img-fluid radius-image" alt=""></a>
                            </div>
                            <div class="col-sm-6 mt-sm-0 mt-3">
                                <a href="#url"><img src="/IFormFileImage/DestinationCoverImages/@item.destinationImage2" class="img-fluid radius-image" alt=""></a>
                            </div>
                        </div>
                        <h3 class="blog-desc-big m-0 mb-lg-4 mb-3">Gezi Hakkında Uyarılar</h3>
                        <p class="mb-4">
                            @item.destinationDetails2
                        </p>


                        <div class="d-grid left-right mt-5 pb-md-5">
                            <div class="buttons-singles tags">
                                <h4>Tags :</h4>
                                <a href="#blog-tag">Travel</a>
                                <a href="#blog-tag">Culture</a>
                                <a href="#blog-tag">Hotel</a>
                                <a href="#blog-tag">Food</a>
                            </div>
                            <div class="buttons-singles">
                                <h4>Paylaş :</h4>
                                <a href="#blog-share"><span class="fa fa-facebook" aria-hidden="true"></span></a>
                                <a href="#blog-share"><span class="fa fa-twitter" aria-hidden="true"></span></a>
                                <a href="#blog-share"><span class="fa fa-google-plus" aria-hidden="true"></span></a>
                                <a href="#blog-share"><span class="fa fa-pinterest-p" aria-hidden="true"></span></a>
                            </div>
                        </div>

                        @await Component.InvokeAsync("DestinationDetailsGuideComment")


                        @await Component.InvokeAsync("DestinationDetailsCommentList", new { id = ViewBag.id })
                        @await Component.InvokeAsync("DestinationDetailsComment")

                    </div>
                </div>
                <!--//blog-post-->
            </div>
        </section>
    }





</body>
