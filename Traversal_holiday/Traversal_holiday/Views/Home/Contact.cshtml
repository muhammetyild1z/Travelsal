@model List<EntityLayer.Concrete.Contact>
@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}


@foreach (var item in Model)
{
    <section class="w3l-about-breadcrumb text-left">
        <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
            <div class="container py-2">
                <h2 class="title">İletişim</h2>
                <ul class="breadcrumbs-custom-path mt-2">
                    <li><a href="#url">Anasayfa</a></li>
                    <li class="active"><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span> İletişim </li>
                </ul>
            </div>
        </div>
    </section>
    <!-- //about breadcrumb -->
    <!-- contact-form -->
    <section class="w3l-contact" id="contact">
        <div class="contact-infubd py-5">
            <div class="container py-lg-3">
                <div class="contact-grids row">
                    <div class="col-lg-6 contact-left">
                        <div class="partners">
                            <div class="cont-details">
                                <h5>Bize Ulaşın</h5>
                                <p class="mt-3 mb-4">
                                   @item.contactDescription
                                </p>
                            </div>
                            <div class="hours">
                                <h6 class="mt-4">Email:</h6>
                                <p>
                                    <a href="@item.contactMail">
                                       @item.contactMail
                                    </a>
                                </p>
                                <h6 class="mt-4">Bizi Ziyaret Edin:</h6>
                                <p> @item.contactAdress</p>
                                <h6 class="mt-4">İletişim:</h6>
                                <p class="margin-top"><a href="tel:@item.contactPhone">@item.contactPhone</a></p>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 mt-lg-0 mt-5 contact-right">
                        <form action="#" method="post" class="signin-form">
                            <div class="input-grids">
                                <div class="form-group">
                                    <input type="text" name="w3lName" id="w3lName" placeholder="Adınız*" class="contact-input" />
                                </div>
                                <div class="form-group">
                                    <input type="email" name="w3lSender" id="w3lSender" placeholder="Mail Adresiniz*" class="contact-input" required="" />
                                </div>
                                <div class="form-group">
                                    <input type="text" name="w3lSubect" id="w3lSubect" placeholder="Konu*" class="contact-input" />
                                </div>
                            </div>
                            <div class="form-group">
                                <textarea name="w3lMessage" id="w3lMessage" placeholder="Mesajınız*" required=""></textarea>
                            </div>
                            <div class="text-right">
                                <button class="btn btn-style btn-primary">Mesajı Gönder</button>
                            </div>
                        </form>
                    </div>

                </div>
                <div class="map mt-5 pt-md-5">
                    <h5>Harita</h5>
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d12817.608211511697!2d36.14393753520951!3d36.56852802994922!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x152f58e76c45ad8b%3A0xf98a91f01da61525!2s%C4%B0skenderun%20Teknik%20%C3%9Cniversitesi%20(%C4%B0STE)!5e0!3m2!1str!2str!4v1667515055274!5m2!1str!2str"
                            style="border:0" allowfullscreen=""></iframe>
             
                </div>
            </div>
            </div>
    </section>
    <!-- /contact-form -->
}