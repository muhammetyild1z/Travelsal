@model IEnumerable<EntityLayer.Concrete.Comment>
@using EntityLayer.Concrete



<div class="comments mt-5">
    <h4 class="side-title ">Yorumlar (@ViewBag.commentCount)</h4>
    @if (ViewBag.commentCount == 0)
    {
        <div class="media mt-4">
            
            <div class="media-body">            
                <p>
                    Henüz bir Yorum yapılmamış..
                </p>
            </div>
        </div>
        
    }

    @foreach (var item in Model)
    {
        <div class="media mt-4">
            <div class="img-circle">
                <img src="~/TraversalStarter/assets/images/c1.jpg" class="img-fluid" alt="...">
            </div>
            <div class="media-body">

                <ul class="time-rply mb-2">
                    <li>
                        <a href="#URL" class="name mt-0 mb-2 d-block">@item.commetUser</a>
                        @item.commetDate.ToShortDateString()

                    </li>
                    <li class="reply-last">
                        <a href="#reply" class="reply">
                            Yanıtla
                        </a>
                    </li>
                </ul>
                <p>
                    @item.commetContent
                </p>
            </div>
        </div>
