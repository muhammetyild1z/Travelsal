@model List<EntityLayer.Concrete.Destination>


<section class="w3l-main-slider" id="home">
    <div class="banner-content">
        <div id="demo-1"
             data-zs-src='["/TraversalStarter/assets/images/banner1.jpg", "/TraversalStarter/assets/images/banner2.jpg","/TraversalStarter/assets/images/banner3.jpg", "/TraversalStarter/assets/images/banner4.jpg"]'
             data-zs-overlay="dots">
            <div class="demo-inner-content">
                <div class="container">
                    <div class="banner-infhny">
                        <h3>Seyehatler için uzağa gitmeye gerek yok.</h3>
                        <h6 class="mb-3">Bir sonraki maceranı hemen planla</h6>
                        <div class="flex-wrap search-wthree-field mt-md-5 mt-4">
                            <form action="/Home/Search" method="post" class="booking-form">
                                <div class="row book-form">
                                    <div class="form-input col-md-2 mt-md-0 mt-3" >
                                                                           
                                        <select name="destinationCity" class="selectpicker " onfocus='this.size=7;' onblur='this.size=1;' onchange='this.size=1; this.blur();' style="height:100% !important;border-radius:15px">
                                            <option style="border-bottom: groove 1px #434388;" value="">Rotalar</option>
                                            @foreach (var item in Model)
                                            {
                                                <option  value="@item.destinationCity">@item.destinationCity</option>
                                            }
                                        </select>

                                       
                                    </div>
                                    <div class="form-input col-md-7 mt-md-0 mt-3 row">
                                       
                                        <input class="col-md-5 " type="date" name="destinationcreateDateStart" placeholder="Date" required="" style="border-radius:15px">
                                        <span class="col-md-1"></span>
                                        <input  class="col-md-5" type="date" name="destinationcreateDateFinish" placeholder="Date" required="" style="border-radius:15px">
                                    </div>
                                    <div class="bottom-btn col-md-3 mt-md-0 mt-3">
                                        <button class="btn btn-style btn-secondary" type="submit">
                                            <span class="fa fa-search mr-3"
                                                  aria-hidden="true"></span> Ara
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
